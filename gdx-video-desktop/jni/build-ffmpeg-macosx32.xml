<project name="cd gdx-video-desktop-ffmpeg-macosx32" basedir="." default="compile">
    <!-- include the environment -->
    <property environment="env"/>
    <!-- output directory for temporary object files -->
    <property name="buildDir" value="ffmpeg/target/macosx32"/>
    <!-- output directory for the shared library -->
    <property name="libsDir" value="../../libs/macosx32"/>

    <!-- cleans the build directory, removes all object files and shared libs -->
    <target name="clean">
        <delete includeemptydirs="true" quiet="true">
            <fileset dir="${buildDir}"/>
            <fileset dir="${libsDir}" includes="**/*" excludes="**/.svn"/>
        </delete>
    </target>

    <target name="precompile">
        <condition property="make-found">
            <or>
                <available file="make" filepath="${env.PATH}"/>
                <available file="make" filepath="${env.Path}"/>
            </or>
        </condition>
        <mkdir dir="${buildDir}"/>
    </target>

    <target name="compile" depends="precompile" if="make-found">
        <chmod file="ffmpeg/ffmpeg-2.2.2/configure" perm="+x"/>
        <chmod file="ffmpeg/ffmpeg-2.2.2/version.sh" perm="+x"/>
        <exec executable="../../ffmpeg-2.2.2/configure" failonerror="true" dir="${buildDir}">
            <env key="CFLAGS" value="-m32"/>
            <env key="CXXFLAGS" value="-m32"/>
            <env key="LDFLAGS" value="-m32"/>
            <arg line="--enable-pic --disable-yasm --enable-cross-compile --disable-symver --disable-doc --arch=i386 --target-os=darwin --prefix=${libsDir} --enable-static --disable-shared --disable-everything --enable-protocol=file --enable-filter=aresample --enable-demuxer=ogg --enable-demuxer=matroska --enable-decoder=vorbis --enable-decoder=vp8 --enable-decoder=vp9 --enable-decoder=theora --enable-filter=deshake"/>
        </exec>
        <exec executable="make" failonerror="true" dir="${buildDir}"/>
        <exec executable="make" failonerror="true" dir="${buildDir}">
            <arg value="install"/>
        </exec>
    </target>
</project>
